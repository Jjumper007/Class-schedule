<div class="row">
    <div class="col-md-12 mx-auto my-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                Nueva Nota
            </div>
            <div class="card-body">
                <form action="/edit-note/{{note._id}}" method="POST">
                    <div class="form group">
                        <input type="text" class="form-control m-2" name="title" placeholder="Titulo" value="{{note.title}}" autofocus>
                    </div>
                    <div class="form group">
                        <textarea class="textarea" name="description" cols="30" rows="10">{{note.description}}</textarea>
                    </div>
                    <div class="form group">
                        <button type="submit" class="btn btn-primary m-4- p-0-4">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>